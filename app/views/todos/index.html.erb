<main class="TodoList">
        <h1 class=" TodoPage-title">My To-do List</h1>
        <article>

            <section class="AddTodo">
                <input class="AddTodo-text" type="text" placeholder="What's next?" />
                <input class="AddTodo-date" type="date" />
                <input class="AddTodo-button" type="button" value="Add" />
            </section>
           <%= render partial: "todo-section", locals: { section_title: "Overdue", todos: Todo.overdue, show_duedate: true, hide_completed: true } %>
           <%= render partial: "todo-section", locals: { section_title: "Due Today", todos: Todo.due_today, show_duedate: false, hide_completed: false } %>
           <%= render partial: "todo-section", locals: { section_title: "Due later", todos: Todo.due_later, show_duedate: true, hide_completed: false } %>
        </article>
</main>      
           